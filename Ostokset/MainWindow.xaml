<Window x:Class="Ostokset.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ostokset"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Background="AliceBlue" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <CheckBox x:Name="cbx1" Content="Milk"/>
            <CheckBox x:Name="cbx2" Content="Butter"/>
            <CheckBox x:Name="cbx3" Content="Beer"/>
            <CheckBox x:Name="cbx4" Content="Chicken"/>
            <CheckBox x:Name="cbx5" Content="Lemonade" />
            <Button x:Name="btnOsta" Content="Buy" Click="btnOsta_Click"/>
            <TextBlock TextWrapping="Wrap" Text="Shopping List:" Width="100"/>
            <TextBox x:Name="txbKori" Height="81"  TextWrapping="Wrap" Text="" Width="215"/>
        </StackPanel>
    </Grid>
</Window>
